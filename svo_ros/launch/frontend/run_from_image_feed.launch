<launch>
  <!-- <arg name="cam_name" />
  <arg name="calib_file" default="$(find svo_ros)/param/calib/$(arg cam_name).yaml"/> -->

  <!-- SVO node -->
  <node pkg="svo_ros" type="svo_node" name="svo" clear_params="true" output="screen" >

    <!-- Camera topic to subscribe to -->
    <param name="cam0_topic" value="camera/image_raw" type="str" />

    <!-- Camera calibration file -->
    <!-- <param name="calib_file" value="$(find svo_ros)/param/calib/general_mono.yaml" type="str" /> -->
    <!-- <param name="calib_file" value="$(find svo_ros)/param/calib/singapore_mono.yaml" type="str" /> -->
    <param name="calib_file" value="$(find svo_ros)/param/calib/oxford_mono.yaml" type="str" />

    <!--Parameters-->
    <rosparam file="$(find svo_ros)/param/general_pinhole.yaml" />
    <param name="map_scale" value="1" />
    
    <!-- Loop closure detection parameters -->
    <param name="runlc" value="false" />
    <!--<rosparam file="$(find svo_ros)/param/loop_closing.yaml" />-->
    <!--<param name="voc_path" value="$(find svo_online_loopclosing)/vocabularies/" type="str" />-->

    <!-- not added during previous run. Make camera rotation face downwards. (As in CNN-SVO) -->
    <param name="init_rx" value="0.00" />
    <param name="init_ry" value="0.00" />
    <param name="init_rz" value="0.00" />

  </node>

  <!-- RVIZ + SVO GUI -->
  <node name="vis" pkg="rviz" type="rviz" args=" -d $(find svo_ros)/rviz_config.rviz" />
  <node name="svo_gui" pkg="rqt_gui" type="rqt_gui" args="-s rqt_svo.svo.Svo --args --topic svo" />

</launch>
